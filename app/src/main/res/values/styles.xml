<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextView属性设置-->
    <style name="text_wrap_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_2</item>
        <item name="android:layout_margin">@dimen/margin_2</item>
    </style>

    <!-- TextView属性设置-->
    <style name="text_match_parent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_2</item>
        <item name="android:layout_margin">@dimen/margin_2</item>
    </style>

    <!-- Button属性设置-->
    <style name="button_wrap_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_2</item>
        <item name="android:layout_margin">@dimen/margin_2</item>
    </style>

    <!-- EditText属性设置-->
    <style name="edit_match_parent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_2</item>
        <item name="android:layout_margin">@dimen/margin_2</item>
    </style>
    <!-- RadioButton属性设置-->
    <style name="radioButton_wrap_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_2</item>
        <item name="android:layout_margin">@dimen/margin_2</item>
    </style>


</resources>
